<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.dpma.projekt.view.BorderLayoutController">
	<top>
		<MenuBar fx:id="menubar" BorderPane.alignment="CENTER">
			<menus>
				<Menu fx:id="menu" mnemonicParsing="false" text="Menü">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#logout" text="Abmelden" />
					</items>
				</Menu>
				<Menu fx:id="viewRoles" mnemonicParsing="false" text="Benutzerrollen">
					<items>
						<MenuItem mnemonicParsing="false" text="Auszubildender" />
						<MenuItem mnemonicParsing="false" text="Ausbildungsleiter" />
						<MenuItem mnemonicParsing="false" text="Ausbilder" />
					</items>
				</Menu>
				<Menu fx:id="options" mnemonicParsing="false" text="Einstellungen">
					<items>
						<MenuItem mnemonicParsing="false" text="Passwort ändern" />
					</items>
				</Menu>
				<Menu fx:id="help" mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" text="About" />
						<MenuItem mnemonicParsing="false" text="Hife" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
